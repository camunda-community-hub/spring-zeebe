{
  "extends": [
    "config:recommended",
    "schedule:automergeNonOfficeHours"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "enabled": false,
      "matchPackageNames": [
        "io.camunda.spring{/,}**"
      ]
    },
    {
      "matchBaseBranches": [
        "main"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "maven"
      ],
      "matchBaseBranches": [
        "/^release/.*/"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "enabled": false
    },
    {
      "matchUpdateTypes": [
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "maven"
      ],
      "description": "Exclude SNAPSHOT versions, renovate may suggest them for pre-release values.",
      "allowedVersions": "!/-SNAPSHOT$/",
      "matchPackageNames": [
        "/.*/"
      ]
    }
  ],
  "baseBranches": [
    "main",
    "/^release/.*/"
  ]
}
